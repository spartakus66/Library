@model IEnumerable<Library.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Please, choose the book you are interested in.</h2>

<form asp-controller="BooksController" asp-action="Search" method="get">
    <p>



        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />

    </p>
    <input type="radio" name="searchRadioButton" value="Title">Title<br />
    <input type="radio" name="searchRadioButton" value="ISBN">ISBN<br />
</form>

<p>
    @if (User.IsInRole("Employee") || User.IsInRole("Administrator"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Publisher.PublisherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.PublisherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destription)
            </td>
            <td>
                @if (User.IsInRole("Reader"))
                {
                    @Html.ActionLink("Borrow", "Borrow", new { id = item.BookID })
                }
                &emsp;

                @if (User.IsInRole("Employee") || User.IsInRole("Administrator"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.BookID })

                }
                &emsp; 
                @Html.ActionLink("Details", "Details", new { id = item.BookID }) 
                &emsp;
                @if (User.IsInRole("Employee") || User.IsInRole("Administrator"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.BookID })
                }
            </td>
        </tr>
    }

</table>
