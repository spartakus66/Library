@model IEnumerable<Library.Models.Subject>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>

    @if (User.IsInRole("Administrator") || User.IsInRole("Employee"))
    {
        @Html.ActionLink("Create New", "Create")
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubjectName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectName)
            </td>
            <td>
                @Html.ActionLink("Preview books", "CategorisedBooks", new {id = item.SubjectID}) 

                @if (User.IsInRole("Administrator") || User.IsInRole("Employee"))
                {
                    @Html.ActionLink("Edit", "Edit", new {id = item.SubjectID})
                }
                @if (User.IsInRole("Administrator") || User.IsInRole("Employee"))
                {
                    @Html.ActionLink("Details", "Details", new {id = item.SubjectID})
                }
                @if (User.IsInRole("Administrator") || User.IsInRole("Employee"))
                {
                    @Html.ActionLink("Delete", "Delete", new {id = item.SubjectID})
                }
            </td>
        </tr>
    }

</table>
