@model ICollection<Library.Models.BookCopy>
@{
    ViewBag.Title = "Borrow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Borrow</h2>

<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Publisher
        </th>
        <th>
            Book Copy ID
        </th>
        <th>
            Action
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookCopyID)
            </td>
            <td>
                @Html.ActionLink("Move to cart", "BorrowAccepted", new { id = item.BookCopyID })
                &emsp;

            </td>
        </tr>
    }

</table>