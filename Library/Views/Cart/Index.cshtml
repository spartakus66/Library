@model ICollection<Library.Models.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your cart</h2>

<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Publisher
        </th>
        <th>
            Book Copy ID
        </th>
        <th>
            Action
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destription)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.BookID })
                &emsp;

            </td>
        </tr>
    }
    <Button>Borrow all</Button>

</table>